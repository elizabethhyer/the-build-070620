<%= welcome_message(@user) %><br>

<%= form_tag user_projects_search(@user), method: :get do %>
  <p>
    <%= label_tag "Search By Keyword" %>
    <%= text_field_tag :query %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<% @projects.each do |p| %>
    <li><%= link_to p.name, project_path(p) %></li>
<% end %>